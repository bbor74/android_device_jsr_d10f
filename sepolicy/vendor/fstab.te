type fstab, domain;
type fstab_exec, exec_type, file_type;

init_daemon_domain(fstab)

#============= fstab ==============
allow fstab init:unix_stream_socket connectto;
allow fstab init_exec:lnk_file read;
allow fstab kmsg_device:chr_file { getattr open write };
allow fstab labeledfs:filesystem remount;
allow fstab persist_file:file { getattr open read write };
allow fstab property_socket:sock_file write;
allow fstab self:capability dac_override;
allow fstab system_data_file:dir { add_name remove_name write };
allow fstab system_data_file:file { getattr create open read rename write };
allow fstab vold_prop:property_service set;

